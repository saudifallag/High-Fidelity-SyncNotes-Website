generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubscriptionTier {
  FREE
  STUDENT
  PRO
}

model User {
  id               String           @id @default(cuid())
  name             String?
  email            String           @unique
  password         String?          // Hashed password
  image            String?
  subscriptionTier SubscriptionTier @default(FREE)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  notes            Note[]     @relation("CreatedNotes")
  sharedNotes      Note[]     @relation("SharedNotes")
}

model Note {
  id            String   @id @default(cuid())
  title         String
  content       String?  @db.Text
  fileContent   String?  @db.Text // Base64 encoded file
  fileType      String?  // e.g., "application/pdf", "image/png"
  annotations   String?  @db.Text // JSON string of canvas data
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation("CreatedNotes", fields: [userId], references: [id], onDelete: Cascade)
  collaborators User[]   @relation("SharedNotes")
}